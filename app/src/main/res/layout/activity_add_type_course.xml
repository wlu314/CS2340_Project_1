<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- assignment -->
    <TextView
        android:id="@+id/title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ASSIGNMENT"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>
    <!-- Course -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/course_FIRSTLL"
        android:layout_below="@id/title_textView"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Name:"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/course_course_editText"
            android:textSize="20sp"
            android:ems="15"
            android:inputType="text"/>
    </LinearLayout>

    <!--Professor-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/course_SECONDLL"
        android:layout_below="@id/course_FIRSTLL"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Professor:"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/course_teacher_editText"
            android:textSize="20sp"
            android:ems="15"
            android:inputType="text"/>
    </LinearLayout>

    <!-- Class Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/course_THIRDLL"
        android:layout_below="@id/course_SECONDLL"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class Section:"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/course_section_editText"
            android:textSize="20sp"
            android:ems="15"
            android:inputType="text"/>
    </LinearLayout>

    <!-- Location -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/course_FOURTHLL"
        android:layout_below="@id/course_THIRDLL"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location/Room Number:"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/course_location_editText"
            android:textSize="20sp"
            android:ems="15"
            android:inputType="text"/>
    </LinearLayout>

    <!-- Date -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/course_FIFTHLL"
        android:layout_below="@id/course_FOURTHLL"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/course_datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Date"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/black"/>
        <TextView
            android:id="@+id/course_datePicker_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Time"
            android:layout_marginLeft="8dp"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Time -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/course_SIXTHLL"
        android:layout_below="@id/course_FIFTHLL"
        android:layout_margin="10dp">
        <Button
            android:id="@+id/course_timePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Time"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/black"/>
        <TextView
            android:id="@+id/course_timePicker_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Time"
            android:layout_marginStart="8dp"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Bottom LinearLayout: Exit, Notification, Save Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:id="@+id/course_exit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/course_notification_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notification"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/course_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>

</RelativeLayout>

