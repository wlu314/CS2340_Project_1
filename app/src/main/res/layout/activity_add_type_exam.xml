<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- assignment -->
    <TextView
        android:id="@+id/title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXAM"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>
    <!--Exam Name-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/title_textView"
        android:id="@+id/exam_FIRSTLL"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exam Name:"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exam_name_editText"
            android:textSize="20sp"
            android:ems="15"
            android:inputType="text"/>
    </LinearLayout>

    <!-- Course -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/exam_SECONDLL"
        android:layout_below="@id/exam_FIRSTLL"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Name:"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/exam_course_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    </LinearLayout>
    <!-- Professor-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/exam_THIRDLL"
        android:layout_below="@id/exam_SECONDLL"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Professor:"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exam_teacher_editText"
            android:textSize="20sp"
            android:ems="15"
            android:inputType="text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/exam_FOURTHLL"
        android:layout_below="@id/exam_THIRDLL"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location Name:"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exam_location_editText"
            android:textSize="20sp"
            android:ems="15"
            android:inputType="text"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/exam_FIFTHHLLLL"
        android:layout_below="@id/exam_FOURTHLL"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/exam_datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Date"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/black"/>
        <TextView
            android:id="@+id/exam_datePicker_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exam Date"
            android:layout_marginLeft="8dp"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
    <!--Time -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/exam_SIXTHTLLLL"
        android:layout_below="@id/exam_FIFTHHLLLL"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/exam_timePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Time"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exam Time"
            android:layout_marginLeft="8dp"
            android:textSize="20sp"
            android:id="@+id/exam_timePicker_textView"
            android:textStyle="bold"/>
    </LinearLayout>
    <!-- bottom linearlayout: exit and save btn-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/add_exam_exit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/add_exam_notification_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notification"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/add_exam_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>

</RelativeLayout>
